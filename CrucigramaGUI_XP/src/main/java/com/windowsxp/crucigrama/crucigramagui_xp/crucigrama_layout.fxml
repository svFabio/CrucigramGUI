<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.windowsxp.crucigrama.crucigramagui_xp.CrucigramaApp">

    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <TextArea fx:id="inputPalabras" prefHeight="0.0" prefRowCount="4" prefWidth="458.0" promptText="Ingresa palabras separadas por coma (mín. 4)" />

    <TextField fx:id="inputTamanio" promptText="Tamaño mínimo 10 (opcional)" visible="false" />

    <Button onAction="#generarCrucigrama" text="Generar Crucigrama" />

    <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
        <content>
            <GridPane fx:id="grid" hgap="5" vgap="5" />
        </content>
    </ScrollPane>

</VBox>
